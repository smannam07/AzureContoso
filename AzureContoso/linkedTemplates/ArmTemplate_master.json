{
	"$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
	"contentVersion": "1.0.0.0",
	"parameters": {
		"factoryName": {
			"type": "string",
			"metadata": "Data Factory name",
			"defaultValue": "AzureContoso"
		},
		"ADFErrorsBlob_connectionString": {
			"type": "secureString",
			"metadata": "Secure string for 'connectionString' of 'ADFErrorsBlob'"
		},
		"ADLSConnection_accountKey": {
			"type": "secureString",
			"metadata": "Secure string for 'accountKey' of 'ADLSConnection'"
		},
		"ContosoSalesConnection_accessToken": {
			"type": "secureString",
			"metadata": "Secure string for 'accessToken' of 'ContosoSalesConnection'"
		},
		"LocalFileConnection_password": {
			"type": "secureString",
			"metadata": "Secure string for 'password' of 'LocalFileConnection'"
		},
		"SynapseDWConnection_connectionString": {
			"type": "secureString",
			"metadata": "Secure string for 'connectionString' of 'SynapseDWConnection'"
		},
		"ADLSConnection_properties_typeProperties_url": {
			"type": "string",
			"defaultValue": "https://azurecontoso.dfs.core.windows.net"
		},
		"LocalFileConnection_properties_typeProperties_host": {
			"type": "string",
			"defaultValue": "C:\\Work\\Azure Contoso\\Data\\Dimensions"
		},
		"LocalFileConnection_properties_typeProperties_userId": {
			"type": "string",
			"defaultValue": "smannam"
		},
		"containerUri": {
			"type": "string",
			"metadata": "URI to storage account containing linked ARM templates"
		},
		"containerSasToken": {
			"type": "string",
			"metadata": "Sas token to storage account containing linked ARM templates"
		}
	},
	"variables": {
		"factoryId": "[concat('Microsoft.DataFactory/factories/', parameters('factoryName'))]"
	},
	"resources": [
		{
			"name": "AzureContoso_ArmTemplate_0",
			"type": "Microsoft.Resources/deployments",
			"apiVersion": "2018-02-01",
			"properties": {
				"mode": "incremental",
				"templateLink": {
					"uri": "[concat(parameters('containerUri'), '/ArmTemplate_0.json', parameters('containerSasToken'))]",
					"contentVersion": "1.0.0.0"
				},
				"parameters": {
					"factoryName": {
						"value": "[parameters('factoryName')]"
					},
					"ADFErrorsBlob_connectionString": {
						"value": "[parameters('ADFErrorsBlob_connectionString')]"
					},
					"ContosoSalesConnection_accessToken": {
						"value": "[parameters('ContosoSalesConnection_accessToken')]"
					},
					"SynapseDWConnection_connectionString": {
						"value": "[parameters('SynapseDWConnection_connectionString')]"
					},
					"ADLSConnection_accountKey": {
						"value": "[parameters('ADLSConnection_accountKey')]"
					},
					"LocalFileConnection_password": {
						"value": "[parameters('LocalFileConnection_password')]"
					},
					"ADLSConnection_properties_typeProperties_url": {
						"value": "[parameters('ADLSConnection_properties_typeProperties_url')]"
					},
					"LocalFileConnection_properties_typeProperties_host": {
						"value": "[parameters('LocalFileConnection_properties_typeProperties_host')]"
					},
					"LocalFileConnection_properties_typeProperties_userId": {
						"value": "[parameters('LocalFileConnection_properties_typeProperties_userId')]"
					}
				}
			},
			"dependsOn": []
		},
		{
			"name": "AzureContoso_ArmTemplate_1",
			"type": "Microsoft.Resources/deployments",
			"apiVersion": "2018-02-01",
			"properties": {
				"mode": "incremental",
				"templateLink": {
					"uri": "[concat(parameters('containerUri'), '/ArmTemplate_1.json', parameters('containerSasToken'))]",
					"contentVersion": "1.0.0.0"
				},
				"parameters": {
					"factoryName": {
						"value": "[parameters('factoryName')]"
					}
				}
			},
			"dependsOn": [
				"[resourceId('Microsoft.Resources/deployments', 'AzureContoso_ArmTemplate_0')]"
			]
		}
	]
}